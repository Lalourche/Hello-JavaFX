<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="background" stylesheets="@hello.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.lalourche.hellojavafx.view.HelloJavaFxController">
   <bottom>
      <Button fx:id="button" defaultButton="true" mnemonicParsing="false" onAction="#handleButtonClick" text="Button" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin></Button>
   </bottom>
   <center>
      <TextField fx:id="result" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="50.0" right="50.0" />
         </BorderPane.margin></TextField>
   </center>
</BorderPane>
